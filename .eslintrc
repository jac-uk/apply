{
  "root": true,
  "env": {
    "node": true,
    "jest": true
  },
  "extends": [
    "plugin:vue/essential",
    "eslint:recommended"
  ],
  "rules": {
    "comma-dangle": ["error", {
      "objects": "always"
    }],
    "semi": "error",
    "func-style": ["error", "expression"],
    "prefer-arrow-callback": "error",
    "quotes": ["error", "single", { "avoidEscape": true}],
    "eol-last": ["error", "always"]
  },
  "parserOptions": {
    "parser": "babel-eslint"
  }
}
